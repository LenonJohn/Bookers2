<table class="table table-hover">
    <tbody>
        <% book.book_comments.each do |book_comment| %>
        <tr>
            <td><%= link_to user_path(book_comment.user) do %><p><%= attachment_image_tag(book_comment.user, :profile_image, size:"40x40", fallback: "no_image.jpg") %></p><% end %></td>
            <td><%= book_comment.comment %></td>
            <% if book_comment.user == current_user %>
            <td id = "book_<%= book.id %>"><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), remote: true, class: "btn btn-sm btn-danger", method: :delete %></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>