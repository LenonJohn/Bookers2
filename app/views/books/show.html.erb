
<div class="container px-5 px px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <% flash.each do |name, msg| %>
              <%= content_tag :p, msg, class: name %>
            <% end %>
            <%= render "books/userinfo", user: @book.user %>
            <%= render "books/newbook", book: @newbook %>
        </div>


        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>

                <table class="table table-hover">


                    <tbody>
                        <tr>

                                <td><%= link_to user_path(@user) do %><p><%= attachment_image_tag(@book.user, :profile_image, size:"40x40", fallback: "no_image.jpg") %></p><p><%= @book.user.name %></p>
                                <% end %></td>
                                <td><%= link_to @book.title, book_path(@book) %></td>
                                <td><%= @book.body %></td>
                                <%# byebug %>
                                <td><p>コメント数:<%= @book.book_comments.count %></p></td>
                                <% if @user.id == current_user.id %>
                                <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
                                <td><%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger", method: :delete %></td>
                                <% end %>

                        </tr>
                    </tbody>
                </table>
                
                <table class="table table-hover">
                    <tbody>
                        <% @book.book_comments.each do |book_comment| %>
                            <tr>
                               <td><%= link_to user_path(book_comment.user) do %><p><%= attachment_image_tag(book_comment.user, :profile_image, size:"40x40", fallback: "no_image.jpg") %></p><% end %></td>
                               <td><%= book_comment.comment %></td>
                                   <% if book_comment.user == current_user %>
                                   <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: "btn btn-sm btn-danger", method: :delete %></td>
                                   <% end %>
                               <% end %>
                            </tr>
                    </tbody>
                </table>
                
                <table class="table table-hover">
                    
                    <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
                      <%= f.text_area :comment, rows:'5',class: "col-md-12",placeholder: "コメントをここに" %>
                      <P><%= f.submit "送信する" %></P>
                    <% end %>
                    
                </table>
        </div>
        
        
   </div>
</div>