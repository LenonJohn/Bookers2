

<div class="container px-5 px px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render "books/userinfo", user: @user %>
            <%= render "books/newbook", book: @book %>
        </div>
 
        
        <div class="col-md-8 offset-md-1">
            <h2>Book</h2>
            
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        <tr>
                           
                           <% @books.each do |book| %>

                            
                            <td><%= attachment_image_tag book.user, :profile_image, size:"40x40", fallback: "no_image.jpg" %></td>
                            <td><%=link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body %></td>
                            <% end %>

                            <th>
                                
                            </th>
                        </tr>
                    </tbody>
                    
                </table>
                
                
                
               
                
        </div>
   </div>
</div>