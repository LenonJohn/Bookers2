<div class="container px-5 px px-sm-0">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h2>Follower Users</h2>
        <table class="table table-hover table-inverse">
        <% if @users.exists? %>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= link_to user_path(user) do %><%= attachment_image_tag(user, :profile_image, size:"40x40", fallback: "no_image.jpg") %><% end %></td>
                <td><%= user.name %></td>
                <td>フォロー数: <%= user.followings.count %></td>
                <td>フォロワー数: <%= user.followers.count %></td>
                <td><%= link_to "Show",user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
    </div>
  </div>
</div>
